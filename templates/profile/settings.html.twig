{% extends 'layouts/base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block one_row_content %}
    <div class="content">
        <br>
        <a href="{{ path('profileIndex') }}" class="link"><i class="fal fa-long-arrow-left"></i> Return to profile</a>
        <h3>Settings: </h3>

        <form>
            <div class="user-settings-left" style="width: 50%; padding: 0 30px 0 0; float: left;">
                <div class="form-group">
                    <input type="email" name="user-email" class="form-control rounded-block" value="{{ user.email }}" placeholder="Email">
                </div>
                <div class="form-group">
                    <button type="submit">Save</button>
                </div>
            </div>
            <div class="user-settings-right" style="width: 50%; padding: 0 0 0 30px; float: right;">
                <div class="form-group">
                    <label for="user-language">Default language: </label>
                    <select name="user-language">
                        <option value="us">US</option>
                        <option value="ua">UA</option>
                        <option value="ru">RU</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="user-keyboard">Keyboard type: </label>
                    <select name="user-keyboard">
                        <option value="iso">ISO</option>
                        <option value="ansi">ANSI</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block two_rows %}{% endblock %}
