{% extends 'layouts/base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block one_row_content %}
    <link rel="stylesheet" href="{{ asset('chartjs/Chart.css') }}">
    <script src="{{ asset('chartjs/Chart.js') }}"></script>
    <div class="content">
        <div class="settings">
            <h1>
                {% if app.user.isPremium %}
                    <img src="{{ asset('img/reward.png') }}" width="40" align="center" alt="Premium member reward" title="Premium member award">
                {% endif %}
                {{ app.user.email }}
                <a href="{{ path('profileSettings') }}">
                    <span class="user-settings-button" title="settings">
                       <i class="fal fa-user-edit"></i>
                    </span>
                </a>
                <a href="{{ path('profilePlans') }}" class="link right" style="font-size: 14px; font-weight: 400; line-height: 34px">Premium subscription</a>
            </h1>
            <hr>
            {% if testsHistoryData is not empty %}
                <label for="test-type">Statistic for: </label>
                <select name="test-type" id="test-type">
                    <option value="general">All tests</option>
                    <option value="1minute">1 minute test</option>
                    <option value="3minute">3 minute test</option>
                    <option value="5minute">5 minute test</option>
                </select>
            {% endif %}
        </div>
        {% if testsHistoryData is empty %}
            <div class="text-center">
                <h1>Your progress statistic is empty</h1>
                <p>Keep going taking the <a href="{{ path('test') }}" class="link">the tests</a> and
                    <a href="{{ path('courses') }}" class="link">courses</a>, and it will appear here.</p>
            </div>
            {% else %}
                <canvas id="myChart" height="100"></canvas>
                <canvas id="accuracyChart" height="100"></canvas>
        {% endif %}

    </div>

    {% if testsHistoryData is not empty %}
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [
                    {% for datetime in testsHistoryData['datetime'] %}
                        '{{ datetime|date("Y.m.d") }}',
                    {% endfor %}
                ],
                datasets: [{
                    label: 'Words per minute (WPM)',
                    data: [
                        {% for wpm in testsHistoryData['wpm'] %}
                            '{{ wpm }}',
                        {% endfor %}
                    ],
                    backgroundColor: [
                        'rgba(61, 163, 232, 0.1)',
                    ],
                    borderColor: [
                        'rgba(61, 163, 232, 1)',
                        'rgba(61, 163, 232, 1)',
                        'rgba(61, 163, 232, 1)',
                        'rgba(61, 163, 232, 1)',
                        'rgba(61, 163, 232, 1)',
                        'rgba(61, 163, 232, 1)',
                        'rgba(61, 163, 232, 1)',
                        'rgba(61, 163, 232, 1)',
                        'rgba(61, 163, 232, 1)',
                        'rgba(61, 163, 232, 1)',
                    ],
                    borderWidth: 3
                }, {
                    label: 'Chars per minute (CPM)',
                    data: [
                        {% for cpm in testsHistoryData['cpm'] %}
                        '{{ cpm }}',
                        {% endfor %}
                    ],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.1)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 99, 132, 1)',
                    ],
                    borderWidth: 3
                }]
            },
            options: {
                tooltips: {
                    mode: 'x-axis',
                    intercept: true
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

        var accuracyCtx = document.getElementById('accuracyChart').getContext('2d');
        var accuracyChart = new Chart(accuracyCtx, {
            type: 'line',
            data: {
                labels: [
                    {% for datetime in testsHistoryData['datetime'] %}
                    '{{ datetime|date("Y.m.d") }}',
                    {% endfor %}
                ],
                datasets: [{
                    label: 'Typing accuracy (%)',
                    data: [
                        {% for accuracy in testsHistoryData['accuracy'] %}
                        '{{ accuracy }}',
                        {% endfor %}
                    ],
                    backgroundColor: [
                        'rgba(72, 191, 63, 0.1)',
                    ],
                    borderColor: [
                        'rgba(72, 191, 63, 1)',
                        'rgba(72, 191, 63, 1)',
                        'rgba(72, 191, 63, 1)',
                        'rgba(72, 191, 63, 1)',
                        'rgba(72, 191, 63, 1)',
                        'rgba(72, 191, 63, 1)',
                        'rgba(72, 191, 63, 1)',
                        'rgba(72, 191, 63, 1)',
                        'rgba(72, 191, 63, 1)',
                        'rgba(72, 191, 63, 1)',
                    ],
                    borderWidth: 3
                }]
            },
            options: {
                tooltips: {
                    mode: 'x-axis',
                    intercept: true
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
    {% endif %}
{% endblock %}

{% block two_rows %}{% endblock %}
