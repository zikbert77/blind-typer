<style>
    textarea {
        border: 5px solid black;
        height: 300px;
        width: 900px;
        overflow-x: hidden;
        text-align: center;
        background-color: white;
        padding: 25px;
        font-size: 44px;
        font-weight: 700;
    }
</style>

{{ form_start(form) }}
    {{ form_widget(form) }}
        {{ form_row(form.text_body) }}
