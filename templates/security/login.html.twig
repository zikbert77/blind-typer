{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block one_row_content %}
<div class="registration-form">

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <div class="form-control">
            <label for="inputEmail" class="sr-only">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control rounded-block" placeholder="Email" required autofocus>
        </div>
        <div class="form-control">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control rounded-block" placeholder="Password" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <div class="form-control">
            <button class="btn btn-lg btn-primary" type="submit">
                Sign in
            </button>
        </div>

        <div class="form-control">
            <a href="{{ path('register') }}">Create new account</a>&nbsp;
            <a href="{{ path('restorePassword') }}" class="link"> Forgot your password?</a>
        </div>
    </form>
</div>
{% endblock %}

{% block two_rows %}{% endblock %}
